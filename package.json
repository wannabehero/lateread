{
  "name": "lateread",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun dev:web\" \"bun dev:server\"",
    "dev:server": "bun --watch src/main.ts",
    "dev:web": "bun build ./web/scripts/app.js ./web/styles/app.css --outdir public --target browser --watch",
    "start": "bun src/main.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "build:web": "bun build ./web/scripts/app.js ./web/styles/app.css --outdir public --target browser --minify --entry-naming '[dir]/[name]-[hash].[ext]'",
    "format": "bunx @biomejs/biome format --write .",
    "lint": "bunx @biomejs/biome lint --write .",
    "check": "bunx @biomejs/biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@libsql/client": "^0.15.15",
    "@picocss/pico": "^2.1.1",
    "@types/bun": "latest",
    "@types/jsdom": "^27.0.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "happy-dom": "^20.1.0",
    "htmx.org": "^2.0.8",
    "lucide-static": "^0.562.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@elevenlabs/elevenlabs-js": "^2.28.0",
    "@mozilla/readability": "^0.6.0",
    "bunline": "github:wannabehero/bunline#v0.0.2",
    "croner": "^9.1.0",
    "drizzle-orm": "^0.45.1",
    "grammy": "^1.38.4",
    "hono": "^4.11.1",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "jsdom": "^27.3.0",
    "marked": "^17.0.1",
    "zod": "^4.2.1"
  }
}
