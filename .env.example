# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=./data/app.db

# Telegram Bot
# Get the token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# LLM (Anthropic Claude)
# Get your API key from: https://console.anthropic.com/
# Don't set it if you don't want to have any AI features
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gradium TTS
# Get your API key from: https://gradium.ai/
# Don't set it if you don't want TTS
GRADIUM_API_KEY=your_gradium_api_key_here

# Authentication & Session
SESSION_SECRET=generate_with_openssl_rand_base64_32
SESSION_MAX_AGE_DAYS=180

# Cache Configuration
CACHE_DIR=./cache/articles
CACHE_MAX_AGE_DAYS=30

# Processing Configuration
PROCESSING_TIMEOUT_SECONDS=60
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MINUTES=5

# Litestream / Cloudflare R2 Backup (optional)
# Leave LITESTREAM_REPLICA_BUCKET empty to disable backup
# Get R2 credentials from: Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
CLOUDFLARE_ACCOUNT_ID=
LITESTREAM_REPLICA_BUCKET=
LITESTREAM_REPLICA_PATH=lateread/db
LITESTREAM_ACCESS_KEY_ID=
LITESTREAM_SECRET_ACCESS_KEY=
